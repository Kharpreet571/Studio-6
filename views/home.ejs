<style>
  /* Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Poppins', sans-serif;
    background: #f9fafb;
    color: #333;
    line-height: 1.6;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  header {
    background-color: #2c3e50;
    padding: 1.5rem 1rem;
    color: #ecf0f1;
    box-shadow: 0 2px 6px rgba(0,0,0,0.2);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  header h1 {
    font-weight: 700;
    font-size: 1.8rem;
    letter-spacing: 2px;
  }

  nav {
    margin-top: 1rem;
  }

  nav ul {
    display: flex;
    list-style: none;
    gap: 1.8rem;
  }

  nav ul li a {
    color: #ecf0f1;
    text-decoration: none;
    font-weight: 600;
    padding: 0.4rem 0.8rem;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  nav ul li a:hover {
    background-color: #34495e;
  }

  main {
    margin-top: 2rem;
  }

  main h2 {
    font-size: 2.2rem;
    color: #2c3e50;
    margin-bottom: 1rem;
  }

  main p {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    max-width: 700px;
  }

  main ul {
    list-style-type: disc;
    padding-left: 1.5rem;
    max-width: 700px;
    color: #34495e;
    font-size: 1.1rem;
  }

  main ul li {
    margin-bottom: 0.7rem;
  }

  footer {
    margin-top: 3rem;
    background-color: #2c3e50;
    color: #ecf0f1;
    text-align: center;
    padding: 1rem 0;
    font-size: 0.9rem;
    letter-spacing: 1px;
  }
</style>
</head>
